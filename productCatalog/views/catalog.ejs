<!DOCTYPE html>
<html>
<head>
    <title>Product Catalog</title>
    <style>
        .product {
            border: 1px solid #ddd;
            padding: 16px;
            margin: 16px;
            text-align: center;
            max-width: 200px;
        }
        .product img {
            width: 100%;
            height: auto;
        }
        .catalog {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }
    </style>
</head>
<body>
    <h1>Product Catalog</h1>
    <div class="catalog">
        <% products.forEach(product => { %>
            <div class="product">
                <img src="<%= product.image %>" alt="<%= product.name %>">
                <h2><%= product.name %></h2>
                <p><%= product.description %></p>
            </div>
        <% }) %>
    </div>
</body>
</html>
